@using BeautyBooking.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>

    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/responsive.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>

    @this.RenderSection("Styles", required: false)
</head>
<body>
    
    <partial name="_CookieConsentPartial" />
    
    <div class="super_container">

        <!-- Menu -->
        <partial name="_MenuPartial" />

        <!-- Home -->
        @if (this.ViewData["Title"].ToString() == "Home Page")
        {
            <div class="home-home">
                <div class="background_image" style="background-image:url(@GlobalConstants.Images.Index)"></div>

                <partial name="_HeaderPartial" />

                <div class="home_container-home">
                    <div class="container">
                        <div class="row">
                            <div class="col-4">
                                <div class="home_title-home">DVOR21</div>
                                <div class="home_text">Стрижка в нашем барбершопе - это не просто услуга, это искусство!</div>
                                <div class="button home_button">
                                    @*<a asp-area="" asp-controller="Salons" asp-action="Index"><span>Book Now</span><span>Book Now</span></a>*@
                                    <a asp-area="" asp-controller="Salons" asp-action="Details" asp-route-id="seededa6df3ba7-d495-4a8a-adb7-7e27ae14b7d9"><span>Записаться</span><span>Записаться</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="home">
                <div class="background_image" style="background-image:url(@GlobalConstants.Images.CoverBackground)"></div>

                <partial name="_HeaderPartial" />

                <div class="home_container">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="home_content">
                                    <div class="home_title">@this.ViewData["Title"]</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="m-5">
            <main role="main">
                @this.RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <iframe style="width:100%;height:100%;"  frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2345.038193616494!2d27.27892711603956!3d54.002097633090656!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46dbe9d26a81307b%3A0xa56b1b783e9093c1!2z0YPQuy4g0J_Rg9GC0LXQudC60L4gMjEsINCX0LDRgdC70LDQstC70YwgMjIzMDM0!5e0!3m2!1sru!2sby!4v1664187334353!5m2!1sru!2sby" width="auto" height="800px" style="border:0;"  loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        <partial name="_FooterPartial" />
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/js/popper.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js" asp-append-version="true"></script>
        <script src="~/plugins/easing/easing.js" asp-append-version="true"></script>
        <script src="~/plugins/parallax-js-master/parallax.min.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/js/popper.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js" asp-append-version="true"></script>
        <script src="~/plugins/easing/easing.js" asp-append-version="true"></script>
        <script src="~/plugins/parallax-js-master/parallax.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @this.RenderSection("Scripts", required: false)
</body>
</html>
